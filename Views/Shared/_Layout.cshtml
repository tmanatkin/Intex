<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LEGO BUILD</title>
    <!-- CSS / Bootstrap -->
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik+Mono+One&display=swap" rel="stylesheet">
    <link rel="shortcut icon" type="image/png" href="~/lib/Legobuild (7).png">

</head>
<body>
    <header class="bg-yellow">
        <nav>
            <a class="nav-end nav-left" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/legoLogo.png"/>
            </a>
            <ul>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Products">Products</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                </li>  
                @* @if (User.IsInRole("Admin")) *@
            </ul>
            <div class="nav-end nav-right">
                <a  asp-area="" asp-controller="Home" asp-action="Products">Cart</a>
                <a  asp-area="" asp-controller="Home" asp-action="Login">Log In</a>
            </div>
        </nav>
    </header>
    <div class="body-container">
        <main role="main" class="content-center-column">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p>&copy; 2024 - Intex</p>
        <p>Group 3-11</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
