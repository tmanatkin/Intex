@if (!User.Identity.IsAuthenticated || User.IsInRole("Admin"))
{
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Home Page</title>
        <link rel="stylesheet" href="~/css/style.css" />
    </head>

    <h1 id="title-main"><span>LEGO </span> <span>BUILD</span></h1>

    <h2 id="subtitle-main">Master Builder's Picks</h2>
    <div class="container-top-products">

        @foreach (Product p in Model.Products.Take(5))
        {
            <div class="product">
                    <img src="@p.ImgLink"/>
                    <h3 class="product-name">@p.Name</h3>
                    <a href="@Url.Action("ProductDetail", "Home", new { id = p.ProductId })">View Product</a>
            </div>    
        }
    </div>

    <h2 id="subtitle-main">Customer Favorites</h2>
    <div class="container-top-products">

        @foreach (Product p in Model.Products.Skip(5).Take(5))
        {
            <div class="product">
                    <img src="@p.ImgLink"/>
                    <h3 class="product-name">@p.Name</h3>
                    <a href="@Url.Action("ProductDetail", "Home", new { id = p.ProductId })">View Product</a>
            </div>    
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.product-name').each(function() {
                var maxWords = 3; // Maximum number of words to display
                var text = $(this).text().trim().split(' ');
                if (text.length > maxWords) {
                    $(this).text(text.slice(0, maxWords).join(' ') + '...');
                }
            });
        });
    </script>
}

else
{
    <h2>fail</h2>
}